{% extends 'template.html.twig' %}

{% block body %}

    <table  class="table table-responsive ">
        <thead>
        <tr>
            <th scope="col" >Identifier</th>
            <th scope="col">Nom</th>
            <th scope="col">SiteVisite</th>
            <th scope="col" >Date</th>
            <th scope="col">MontantJournalier</th>
            <th scope="col">MontantMensuel</th>
            <th scope="col">MontantAnnuel</th>
            <th scope="col">ControllerCentrale</th>
            <th scope="col">Marie</th>
        </tr>
        </thead>
        <tbody>
        {% for agent in agents %}
        <tr>
            <th scope="row">{{ agent.id }}</th>
            <td>{{ agent.nomAgent }}</td>
            <td>{{ agent.siteVisite }}</td>
            <td >{{ agent.date|date('Y-m-d') }}</td>
            <td>{{ agent.montantCollecteJournalier }}</td>
            <td>{{ agent.montantCollecteMensuel }}</td>
            <td>{{ agent.montantCollecteAnnuel }}</td>
            <td>{{ agent.controlleurCentrale }}</td>
            <td>{{ agent.maire }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block PageTitre %}
    Liste des Agents de collectes
{% endblock %}
{% block title %}

{% endblock %}

