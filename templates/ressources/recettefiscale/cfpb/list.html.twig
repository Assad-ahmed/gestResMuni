
{% extends '/template.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <table class="table table-bordered">
        <thead class="text-center " style="background-color: rgb(130, 106, 251);color:#fff;">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom </th>
            <th scope="col">TypeBatiment</th>
            <th scope="col">Adresse</th>
            <th scope="col">Surface</th>
            <th scope="col">Date </th>
            <th scope="col">ValeurLocative</th>
            <th scope="col">RevenuNet</th>
            <th scope="col" >Montant</th>
            <th scope="col">Details</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for cfpb in cfpbs %}

            <tr>
                <th scope="row">{{ cfpb.id }}</th>
                <td>{{ cfpb.nomP }}</td>
                <td>{{ cfpb.typeBatiment }}</td>
                <td>{{ cfpb.adresse }}</td>
                <td>{{ cfpb.surface }}</td>
                <td>{{ cfpb.dateImposition|date('Y-m-d') }}</td>
                <td>{{ cfpb.valeurLocative }}</td>
                <td>{{ cfpb.revenuNet }}</td>
                <td>{{ cfpb.montantTaxe }}</td>
                <td><a href="#" class="btn btn-primary mt-2"><i class="fa-solid fa-circle-info"></i></a></td>
                <td><a href="{{ path('cfpb_new',{id: cfpb.id}) }}" class="btn btn-primary "> <i class="fa-solid fa-user-pen"></i></a></td>
                <td><a href="{{ path('delete_cfpb',{id: cfpb.id}) }}" class="btn btn-danger "><i class="fa-solid fa-trash"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if isPaginated %}
        <div class="row mt-3">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if page != 1 %}
                        <li class="page-item"><a class="page-link" style="background-color: rgb(130, 106, 251);color:#fff;" href="{{ path('cfpnb_list',{page: page-1, nbre:nbre}) }}">Previous</a></li>
                    {% endif %}
                    {% for i in range(1, nbrePage) %}
                        <li class="page-item"><a class="page-link" href="{{ path('cfpnb_list',{page: i, nbre:nbre}) }}">{{ i }}</a></li>
                    {% endfor %}
                    {% if page !=nbre %}
                        <li class="page-item"><a class="page-link" style="background-color: rgb(130, 106, 251);color:#fff;" href="{{ path('cfpnb_list',{page: page+1, nbre:nbre}) }}">Next</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
{% endblock %}
{% block PageTitre %}
    <h1>Liste CFPNB </h1>
{% endblock %}




