            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for cfpnb in cfpnbs %}

                <tr>
                    <th scope="row">{{ cfpnb.id }}</th>
                    <td>{{ cfpnb.nomP }}</td>
                    <td>{{ cfpnb.typeTerrain }}</td>
                    <td>{{ cfpnb.adresse }}</td>
                    <td>{{ cfpnb.surface }}</td>
                    <td>{{ cfpnb.date|date('Y-m-d') }}</td>
                    <td>{{ cfpnb.valeurVenale }}</td>
                    <td>{{ cfpnb.revenuNet }}</td>
                    <td>{{ cfpnb.montantTaxe }}</td>
                    <td><a href="#" class="btn btn-primary mt-2"><i class="fa-solid fa-circle-info"></i></a></td>
                    <td><a href="{{ path('cfpnb_new',{id: cfpnb.id}) }}" class="btn btn-primary "> <i class="fa-solid fa-user-pen"></i></a></td>
